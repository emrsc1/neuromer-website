    <title><%= title %></title>
    <style></style>
  </head>
  <body>
    <%- include('../partials/admin-nav') %>
    <div class="container">
      <div id="events">
        <h2 class="mt-5" style="font-family: 'Lora'; text-align: center; font-weight: bold">
          Upcoming Events
        </h2>
        <br />
        <div class="row col-md-12">
           <% if (action != "undefined" && action=="update") { %>
                    <div class="alert alert-success">
                        You have successfully updated the event.
                    </div>
                <% } %>
                <% if (action != "undefined" && action=="delete") { %>
                    <div class="alert alert-success">
                        You have successfully deleted the event.
                    </div>
                <% } %>
                <% if (action != "undefined" && action=="create") { %>
                    <div class="alert alert-success">
                        You have successfully created the event
                    </div>
                <% } %>
          <% events.forEach(event => { %>
            <div class="col-md-4">
              <div
                class="card mb-3 box-shadow"
                style="
                  box-shadow: rgba(0, 0, 0, 0.15) 1.5px 1.5px 2.6px;
                  border: none;
                "
              >
                <img
                  class="card-img-top"
                  alt=""
                  style="height: 320px;"
                  src="/img/<%= event.image %>"
                  data-holder-rendered="true"
                />
                <div class="card-body">
                  <p class="card-text">
                    <%= event.title %>
                  </p>
                  <div class="row col-md-12">
                    <div class="col-md-8">
                      <div class="row">
                        <i
                          class="fa-regular fa-calendar col-md-2 "
                          style="color: gray"
                        ></i>
                        <p class="col-md-10 text-nowrap" style="font-size: 0.9rem; color: gray">
                          <%= event.date %>
                        </p>
                      </div>
                      <div class="row">
                        <i
                          class="fa-regular fa-clock col-md-2"
                          style="color: gray"
                        ></i>
                        <p class="col-md-10 text-nowrap" style="font-size: 0.9rem; color: gray">
                          <%= event.time %>
                        </p>
                      </div>
                      <div class="row">
                        <div class="col-md-3">

                          <a class="btn btn-primary m-1" href="/admin/events/<%= event.id %>">Edit</a>
                        </div>
                        <div class="col-md-3">

                          <a class="btn btn-danger m-1" href="/admin/event-delete/<%= event.id %>">Delete</a>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-4 ">
                     
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
          
          
          
        </div>
      </div>
    </div>
  </body>
