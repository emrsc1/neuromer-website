    <style></style>
  </head>
  <body>
    <%- include('../partials/admin-nav') %>
    <div class="container">
      <div class="text-center"><h1>Publications</h1></div>
       <div class="row" style="margin:40px 0 20px 0;">
         <% if (typeof action != "undefined" && action=="update") { %>
                    <div class="alert alert-success mt-2">
                        You have successfully updated the publication.
                    </div>
                <% } %>
                <% if (typeof action != "undefined" && action=="delete") { %>
                    <div class="alert alert-success mt-2">
                        You have successfully deleted the publication.
                    </div>
                <% } %>
                <% if (typeof action != "undefined" && action=="create") { %>
                    <div class="alert alert-success mt-2">
                        You have successfully created the publication.
                    </div>
                <% } %>

                <% publications.forEach(publication => { %>
                  
                    <div class="col-md-4 mb-3">
                 
                    <div class="card h-100 mt-3 mb-3" style="border: none !important;">
                      <img
                        src="/img/<%= publication.image %>"
                        class="card-img-top"
                        alt=""
                        style="width: 100%;height: 15rem;"
                      />
                      <div class="card-body" style="overflow: hidden; text-overflow: ellipsis;
                         display: -webkit-box; -webkit-line-clamp: 6;
                          -webkit-box-orient: vertical; height: 10.5em;">
                        <h5 class="card-title text-truncate">
                          <%= publication.title %>...
                        </h5>
                        <p class="card-text" >
                          <%- publication.description %>
                        </p>
                        
                      </div>
                       <div class="card-footer" style="border: none !important;">
                        <small class="text-muted"><%= publication.date %></small>
                      </div>
                      <div class="card-footer" style="border: none !important;">
                            <a class="btn btn-primary" href="/admin/publications/<%= publication.id %>">Edit</a>
                            <a class="btn btn-danger" href="/admin/publication-delete/<%= publication.id %>">Delete</a>
                        </div>
                     
                    </div>
                </div>
                <% }) %>
       
      </div>
    </div>
  </body>
